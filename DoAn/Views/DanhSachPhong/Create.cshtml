@model Models.DanhSachPhong
@{
  
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    @using (Html.BeginForm("them-moi", "danh-sach-phong", FormMethod.Post))//sửa
    {
        if (ViewData["successMsg"] != null)
        {
            <div class="text-success">
                Thêm danh sach phong thành công
            </div>
        }
        <div class="form-group">
            <label for="name">Số phòng:</label>
            @Html.TextBoxFor(model => model.SoPhong, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="category">Nhóm phòng</label>
            @Html.DropDownListFor(model => model.NhomPhong_id, null, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="category">Trạng thái</label>
            @Html.CheckBoxFor(model => model.TrangThai,new { @class = "" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success">Thêm</button>
            <a href="/danh-sach-phong/danh-sach-danh-sach-phong" class="btn btn-danger">Quay lại</a>
        </div>
    }
</div>

